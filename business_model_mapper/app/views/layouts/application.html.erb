<!DOCTYPE html>
<html>
  <head>
    <title>ProductValueMapper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header class="header">
        <img src="images/logo.png" alt="" class="logo">
        <form action="#" class="search">
          <input type="text" class="search__input" placeholder="search for resource, approach etc">
          <button class="search__button">
            <svg class="search__icon">
              <use xlink:href="image_url('sprite-main.svg#icon-magnifying-glass')"></use>
            </svg>
          </button>
        </form>
      </header>
      <div class="content">
        <nav class="sidebar">
          navigation
        </nav>
        <main class="map">
          map
        </main>
      </div>
    
    </div>
    
    <%= yield %>
  </body>
</html>
