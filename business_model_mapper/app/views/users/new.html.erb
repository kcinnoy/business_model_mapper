<%= form_for @user do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br /><br />

  <%= f.label :email %><br />
  <%= f.text_field :email %><br /><br />

  <%= f.label :admin, "Check box if you are a theme park owner" %> <%= f.check_box :admin %><br /><br />

  <%= f.label :password, "Password" %><br />
  <%= f.password_field :password %><br /><br />

  <%= f.submit "Create User"%><br /><br />
<% end %>