
<%= form_for [@strategic_goal,@project] do |f| %>

    <%= f.hidden_field :strategic_goal_id %>

    <%= f.label :name %><br />
    <%= f.text_field :name %><br /><br />

    <%= f.fields_for :resources do |r| %>
        <%= r.label :name %><br />
        <%= r.text_field :name %><br />
        <%= r.label :resource_type %><br />
        <%= r.select :resource_type, options_for_select(["Free", "Basic", "Advanced", "Super Platinum"]) %><br />
        <%= r.label :Qty %><br />
        <%= r.number_field :qty %><br />
    <% end %>
        
 <%= f.submit 'Create Project' %>
<% end %>